<%- contentFor('body') %>
<%- include partials/top_nav.ejs %>
<section class="page-content">
	<section class="panel">
		<div class="panel-heading">
	        <h3>
	           Manage Profile
	        </h3>
	    </div>
		<div class="panel-body">
			<div>
				<%if (messages.errors) { %>
	                <div class="alert alert-danger" role="alert">
	                	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	                		<span aria-hidden="true">×</span>
	                	</button>
	                	<%= messages.errors[0].message %>
	                </div>
	            <% } %>
	            <%if (messages.success) { %>
	                <div class="alert alert-success" role="alert">
	                	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	                		<span aria-hidden="true">×</span>
	                	</button>
	                	<%= messages.success[0].message %>
	                </div>
	            <% } %>
			</div>

			<div class="row">
				<div class="col-md-12">
					<form method="post" action="/user/update">
					     
				        	<div class="form-group row">
					            <div class="col-md-3">
					                <label class="form-control-label">Email</label>
					            </div>
					            <div class="col-md-9">
					                <input type="email" name="email" id="group-edit" class="form-control" placeholder="Email" value="<%= email %>" required>
					            </div>
					        </div>
					        <button type="submit" class="btn btn-primary">Save changes</button>
					      
				    </form>
				</div>
			</div>
		</div>
	</section>
</section>

<%- contentFor('page_script') %>
<!-- Page Scripts -->